<?xml version="1.0" ?>
<robot name="donar_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="$(find donar_description)/urdf/materials.xacro" />


<!-- BASE FOOTPRINT -->
<link name="base_footprint"/>

<joint name="base_footprint_joint" type="fixed">
  <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/>
  <parent link="base_footprint"/>
  <child link="base_link"/>
</joint>


<!-- BASE LINK -->
<link name="base_link">
  <inertial>
    <origin xyz="0.00013095962477824982 1.4938322527424564e-05 0.19291134702067492" rpy="0 0 0"/>
    <mass value="35.0"/>
    <inertia ixx="4.525119" iyy="7.683395" izz="8.427305" ixy="-4.4e-05" iyz="0.000243" ixz="-0.008986"/>
  </inertial>
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://donar_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="silver"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://donar_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>


<!-- LIDAR SENSOR -->
<xacro:property name="width" value="0.03815" />
<xacro:property name="bodylen" value="0.041" />
<link name="lidar_scanner">
  <inertial>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <mass value="0.17"/>
    <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" iyz="0.0" ixz="0.0"/>
  </inertial>
  <visual>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="${width}" length="${bodylen}"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="${width}" length="${bodylen}"/>
    </geometry>
  </collision>
</link>



<!--MPU9250 -->

<link name="IMU_link">
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <mass value="0.0005"/>
    <inertia ixx="0.0000001" iyy="0.0000001" izz="0.0000001"
             ixy="0.0" iyz="0.0" ixz="0.0"/>
  </inertial>
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  <geometry>
    <box size="0.0025 0.009 0.0025"/>
  </geometry>
    <material name="black">
      <color rgba="0.0 0.0 0.0 1.0"/>
    </material>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.0025 0.009 0.0025"/>
    </geometry>
  </collision>
</link>

<!-- Mount IMU to robot -->
<joint name="IMU_joint" type="fixed">
  <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="IMU_link"/>
</joint>

<!-- GAZEBO SENSOR PLUGIN -->

<gazebo reference="IMU_link">
  <sensor name="mpu9250" type="imu">
    <ignition_frame_id>IMU_link</ignition_frame_id>
    <always_on>1</always_on>
    <update_rate>100</update_rate>
    <topic>/donar_robot/imu</topic>
    <imu>
      <angular_velocity>
        <x>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.00017</stddev>
          </noise>
        </x>
        <y>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.00017</stddev>
          </noise>
        </y>
        <z>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.00017</stddev>
          </noise>
        </z>
      </angular_velocity>
      <linear_acceleration>
        <x>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.0029</stddev>
          </noise>
        </x>
        <y>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.0029</stddev>
          </noise>
        </y>
        <z>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.0029</stddev>
          </noise>
        </z>
      </linear_acceleration>
    </imu>
  </sensor>
</gazebo>

<!-- IntelRealSense D435 camera -->

<!-- RGBD CAMERA -->
<link name="camera_link">
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <mass value="0.072"/>
    <inertia ixx="0.000001" iyy="0.000001" izz="0.000001"
             ixy="0.0" iyz="0.0" ixz="0.0"/>
  </inertial>
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  <geometry>
    <box size="0.025 0.09 0.025"/>
  </geometry>
    <material name="black">
      <color rgba="0.0 0.0 0.0 1.0"/>
    </material>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.09 0.025 0.025"/>
    </geometry>
  </collision>
</link>

<!-- Mount camera to robot -->
<joint name="camera_joint" type="fixed">
  <origin xyz="0.348 0.0 0.25" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="camera_link"/>
</joint>

<!-- Optical frame - corrects coordinate convention -->
<!-- ROS: X forward Y left Z up -->
<!-- Camera optical: Z forward X right Y down -->
<link name="camera_optical_frame"/>

<joint name="camera_optical_joint" type="fixed">
  <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
  <parent link="camera_link"/>
  <child link="camera_optical_frame"/>
</joint>

<!-- GAZEBO SENSOR PLUGIN -->
<gazebo reference="camera_link">
  <sensor name="realsense_d435" type="rgbd_camera">
    <!-- <ignition_frame_id>camera_optical_frame</ignition_frame_id> -->
    <ignition_frame_id>camera_link</ignition_frame_id>
    <camera name="realsense_d435">

      <!-- D435 horizontal FOV: 91.2 degrees = 1.5908 radians -->
      <horizontal_fov>1.5908</horizontal_fov>

      <!-- Intrinsics calibrated for 1280x720 -->
      <lens>
        <intrinsics>
          <fx>920.0</fx>
          <fy>920.0</fy>
          <cx>640.5</cx>
          <cy>360.5</cy>
          <s>0</s>
        </intrinsics>
      </lens>
      <distortion>
        <k1>0.096559</k1>
        <k2>-0.237840</k2>
        <k3>0.113659</k3>
        <p1>0.000396</p1>
        <p2>0.000247</p2>
        <center>0.5 0.5</center>
      </distortion>

      <!-- Slight noise to simulate real sensor -->
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.003</stddev>
      </noise>

      <!-- RGB image settings -->
      <image>
        <width>1280</width>
        <height>720</height>
        <format>RGB_INT8</format>
      </image>

      <!-- RGB clip -->
      <clip>
        <near>0.01</near>
        <far>100</far>
      </clip>

      <!-- Depth clip â€” D435 spec: 0.1m to 10m -->
      <depth_camera>
        <clip>
          <near>0.1</near>
          <far>10.0</far>
        </clip>
      </depth_camera>

    </camera>
    <always_on>1</always_on>
    <update_rate>30</update_rate>
    <visualize>0</visualize>
    <topic>/donar_robot/depth_camera</topic>
  </sensor>
</gazebo>

<!-- Camera Gazebo material -->
<gazebo reference="camera_link">
  <material>Gazebo/White</material>
</gazebo>

<joint name="lidar_joint" type="fixed">
  <origin xyz="0.00 0.00 0.41" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="lidar_scanner"/>
</joint>


<!-- RIGHT WHEEL -->
<link name="right_wheel_1">
  <inertial>
    <origin xyz="0.0 -0.025 0.0" rpy="0 0 0"/>
    <mass value="2.0"/>
    <inertia ixx="0.016277" iyy="0.031234" izz="0.016277" ixy="0.0" iyz="0.0" ixz="0.0"/>
  </inertial>
  <visual>
    <origin xyz="-0.221 0.26 -0.04" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://donar_description/meshes/right_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <origin xyz="-0.221 0.26 -0.04" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://donar_description/meshes/right_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>

<joint name="right_wheel_joint" type="continuous">
  <origin xyz="0.221 -0.26 0.04" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="right_wheel_1"/>
  <axis xyz="0.0 1.0 0.0"/>
</joint>

<!-- LEFT WHEEL -->
<link name="left_wheel_1">
  <inertial>
    <origin xyz="0.0 0.025 0.0" rpy="0 0 0"/>
    <mass value="2.0"/>
    <inertia ixx="0.016277" iyy="0.031234" izz="0.016277" ixy="0.0" iyz="0.0" ixz="0.0"/>
  </inertial>
  <visual>
    <origin xyz="-0.221 -0.26 -0.04" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://donar_description/meshes/left_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <origin xyz="-0.221 -0.26 -0.04" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://donar_description/meshes/left_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>

<joint name="left_wheel_joint" type="continuous">
  <origin xyz="0.221 0.26 0.04" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="left_wheel_1"/>
  <axis xyz="0.0 1.0 0.0"/>
</joint>

<!-- LEFT CASTER WHEEL (NEW SIMPLIFIED DESIGN) -->
<link name="left_caster_wheel_1">
  <inertial>
    <!-- Inertial from new exported URDF -->
    <origin xyz="0.0 0.0 -0.03891304347826075" rpy="0 0 0"/>
    <mass value="0.408490820770769"/>
    <inertia ixx="0.000369" iyy="0.000369" izz="0.000304" ixy="0.0" iyz="0.0" ixz="0.0"/>
  </inertial>
  <visual>
    <!-- Visual offset from new URDF -->
    <origin xyz="0.304 -0.2 0.01" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://donar_description/meshes/left_caster_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <!-- Use sphere collision for better physics -->
    <origin xyz="0.0 0.0 -0.05" rpy="0 0 0"/>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>
  </collision>
</link>

<joint name="left_caster_joint" type="fixed">
  <!-- Position from new URDF -->
  <origin xyz="-0.304 0.2 -0.01" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="left_caster_wheel_1"/>
</joint>

<!-- RIGHT CASTER WHEEL (NEW SIMPLIFIED DESIGN) -->
<link name="right_caster_wheel_1">
  <inertial>
    <!-- Inertial from new exported URDF -->
    <origin xyz="0.0 0.0 -0.03891304347826075" rpy="0 0 0"/>
    <mass value="0.408490820770769"/>
    <inertia ixx="0.000369" iyy="0.000369" izz="0.000304" ixy="0.0" iyz="0.0" ixz="0.0"/>
  </inertial>
  <visual>
    <!-- Visual offset from new URDF -->
    <origin xyz="0.304 0.2 0.01" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://donar_description/meshes/right_caster_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="black"/>
  </visual>
  <collision>
    <!-- Use sphere collision for better physics -->
    <origin xyz="0.0 0.0 -0.05" rpy="0 0 0"/>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>

  </collision>
</link>

<joint name="right_caster_joint" type="fixed">
  <!-- Position from new URDF -->
  <origin xyz="-0.304 -0.2 -0.01" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="right_caster_wheel_1"/>
</joint>

<!-- GAZEBO PLUGINS -->
<gazebo>
  <plugin filename="ignition-gazebo-joint-state-publisher-system"
          name="ignition::gazebo::systems::JointStatePublisher">
    <topic>/joint_states</topic>
    <update_rate>50</update_rate>
    <joint_name>left_wheel_joint</joint_name>
    <joint_name>right_wheel_joint</joint_name>
  </plugin>
</gazebo>


<gazebo>
  <plugin filename="ignition-gazebo-diff-drive-system"
          name="ignition::gazebo::systems::DiffDrive">
    <left_joint>left_wheel_joint</left_joint>
    <right_joint>right_wheel_joint</right_joint>
    <wheel_separation>0.52</wheel_separation>
    <wheel_radius>0.14</wheel_radius>
    <max_linear_velocity>3</max_linear_velocity>
    <min_linear_velocity>-3</min_linear_velocity>
    <max_angular_velocity>3.0</max_angular_velocity>
    <min_angular_velocity>-3.0</min_angular_velocity>
    <max_linear_acceleration>2.0</max_linear_acceleration>
    <topic>/donar_robot/cmd_vel</topic>
    <odom_topic>/donar_robot/odometry</odom_topic>
    <frame_id>odom</frame_id>
    <child_frame_id>base_footprint</child_frame_id>
    <odom_publish_frequency>50</odom_publish_frequency>
    <tf_topic>/tf</tf_topic>
  </plugin>
</gazebo>

<!-- RPLidar A2 -->
<gazebo reference="lidar_scanner">
  <material>Gazebo/Black</material>
  <sensor type="gpu_lidar" name="RPLidar_A2_sensor">
  <ignition_frame_id>lidar_scanner</ignition_frame_id>
    <topic>/donar_robot/laser/scan</topic>
    <visualize>true</visualize>
    <update_rate>40</update_rate>
    <ray>
      <scan>
        <horizontal>
          <samples>720</samples>
          <resolution>1</resolution>
          <min_angle>-3.14159</min_angle>
          <max_angle>3.14159</max_angle>
        </horizontal>
      </scan>
      <range>
        <min>0.20</min>
        <max>16.0</max>
        <resolution>0.02</resolution>
      </range>
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.01</stddev>
      </noise>
    </ray>
  </sensor>
</gazebo>

<!-- GAZEBO MATERIALS -->
<gazebo reference="base_link">
  <material>Gazebo/Grey</material>
</gazebo>

<gazebo reference="right_wheel_1">
  <material>Gazebo/Black</material>
  <mu1>1.0</mu1>
  <mu2>1.0</mu2>
</gazebo>

<gazebo reference="left_wheel_1">
  <material>Gazebo/Black</material>
  <mu1>1.0</mu1>
  <mu2>1.0</mu2>
</gazebo>

<gazebo reference="left_caster_wheel_1">
  <mu1>0.01</mu1>
  <mu2>0.01</mu2>
</gazebo>

<gazebo reference="right_caster_wheel_1">
  <mu1>0.01</mu1>
  <mu2>0.01</mu2>
</gazebo>

</robot>
